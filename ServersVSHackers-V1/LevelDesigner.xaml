<Window x:Class="ServersVSHackers_V1.LevelDesigner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LevelDesigner" Height="900
        " Width="1400" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid Name="Gridx">
        <Canvas Name="CreateCanvas" HorizontalAlignment="Left" Height="750" Margin="10,10,0,0" VerticalAlignment="Top" Width="1372">
            <TextBox Name="CountryTextBox" Height="22" Canvas.Left="706" TextWrapping="Wrap" Text="CountryName" Canvas.Top="826" Width="120" PreviewKeyDown="CountryTextBox_PreviewKeyDown" />
        </Canvas>
        <Button Name="NewCountryButton" Content="New Country" HorizontalAlignment="Left" Margin="40,836,0,0" VerticalAlignment="Top" Width="74" Click="NewCountryButton_Click"/>
        <Button Name="SaveCountryButton" Content="Save Country" HorizontalAlignment="Left" Margin="140,836,0,0" VerticalAlignment="Top" Width="75" Click="SaveCountryButton_Click"/>
        <Label Content="Click on coordinates to make a polygon shape. Use your common sense!" HorizontalAlignment="Left" Margin="269,836,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
